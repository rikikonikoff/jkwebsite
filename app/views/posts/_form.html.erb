<%= form_for(@post) do |f| %>
  <%= f.label :title %>
  <br/>
  <%= f.text_field :title, style: "width: 80%;" %>
  <br/>
  <%= f.label :body, "Content" %>
  <br/>
  <%= f.text_area :body, style: "width: 90%; height: 500px;" %>
  <br/>
  <strong>Add Photos:</strong>
  <br/>
  <%= f.file_field :photos, multiple: true %>
  <br/>

  <%= f.submit "Post" %>
<% end %>
